<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">

    
     <h2> <%=listing.title%> </h2>
    </div>
    <div class="col-6 offset-2 mt-3">
    <div class="card">
        <img src="<%=listing.image%>" class="card-img-top show-img" alt="Show image">
        <div class="card-body">
          <p class="card-text">
            <br>
            <%=listing.description%> <br>
            &#8377;<%=listing.price.toLocaleString("en-IN")%><br>
            <%=listing.location%> <br>
            <%=listing.country%>

        </p>
        </div>
    </div>

    <div class="btns">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-2 edit-btn"> Edit </a>
         
        <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark   offset-3">Delete </button>
        </form>
    </div>
    <hr>
   
     
    
 </div>
 <div class="col-8 offset-2 mt-5 mb-3">
    <h4>Leave a Review</h4>
    <form action="/listings/<%=listing.id%>/reviews" method="post">
        <div class="mt-3 mb-3">
            <label for="rating" class="form-label"></label>
            <input type="range" id="rating" min="1" max="5" name="review[rating]" class="form-range" >
        </div>
        
        <div class="mt-3 mb-3">
            <label for="comment" class="form-label"></label>
            <textarea name="review[comment]" id="comment" cols="30" rows="3" class="form-control"></textarea>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
    </form>

</div>
</div>
</body>
 