 <% layout("/layouts/boilerplate") %>
<!-- there was success variable 
for the bootstarp styling we shifted it into flash.ejs file(views/includes)-->
  

    <h3>All listings</h3>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <%for(listing of allListings){%>
         <a href="/listings/<%=listing._id%>" class="listing-links">
          <div class="card col listing-card"  >
            <img src="<%=listing.image%>" class="card-img-top" alt="..." style="height: 20rem;">
            <div class="card-img-overlay"> </div>
            <div class="card-body">
              <p class="card-text">
                <b> <%=listing.title%></b>
                <br>
                &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
              </p>
            </div>
          </div>
         </a>
        <%}%>
    </div>
    
     
 
 